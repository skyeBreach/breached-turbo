##  For more information on this file, please see https://editorconfig.org/

# Set this to be the top-most EditorConfig file
root = true

## Root settings for all file-types/paths unless overridden
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
tab_width = 4

## YAML files require 2 space indention (Does not allow tabs) per level
[*.{yaml,yml}]
indent_style = space
indent_size = 2
tab_width = 2
