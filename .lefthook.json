{
    "pre-commit": {
        "parallel": true,
        "commands": {
            "spellcheck": {
                "run": "bun cspell {staged_files} --no-must-find-files"
            }
        }
    },
    "commit-msg": {
        "parallel": true,
        "scripts": {
            "commitlint.sh": {
                "runner": "bash"
            }
        }
    }
}
